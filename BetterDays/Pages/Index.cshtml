@page
@model BetterDays.Pages.Index
@{
    ViewData["Title"] = "History";
}

<p>
    <a asp-page="CreateNote">New Note</a>
</p>

@foreach (var day in Model.Items)
{
    <div class="card mb-3">
        <div class="card-body">
            <h2>@day.Date.ToString("dd MMM yyyy")</h2>
            <p>
                Productivity: @day.Productivity/5<br/>
                Mood: @day.Mood/5
            </p>
            @if (day.Comment is not null)
            {
                <p>@day.Comment</p>
            }
            <ul>
                @foreach (var deed in day.DoneDeeds)
                {
                    <li>@deed</li>
                }
            </ul>
        </div>
        <div class="card-footer">
            <div class="row justify-content-end g-3">
                @{
                    var encodedDate = day.Date.ToString("yyyy-MM-dd");
                }

                <div class="col-auto">
                    <a asp-page="EditNote" asp-route-date="@encodedDate">
                        Edit
                    </a>
                </div>
                <div class="col-auto">
                    <a asp-page="DeleteNote" asp-route-date="@encodedDate">
                        Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
}
